{
  "name": "@v3ai/ui-workspace",
  "version": "1.0.0",
  "description": "V3 AI 通用 UI 组件库 - 零外部依赖，支持 React + Vue",
  "author": "V3 AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/v3ai2026/modaai.git"
  },
  "keywords": [
    "v3ai",
    "ui-components",
    "react",
    "vue",
    "icons",
    "animation",
    "typescript",
    "zero-dependencies"
  ],
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lib:dev": "turbo run dev",
    "lib:build": "turbo run build",
    "lib:test": "turbo run test",
    "lib:lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,md}\"",
    "docs:dev": "cd docs && vitepress dev",
    "docs:build": "cd docs && vitepress build",
    "docs:preview": "cd docs && vitepress preview",
    "publish:all": "pnpm lib:build && changeset publish",
    "version": "changeset version",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "^19.2.3",
    "framer-motion": "11.11.17",
    "lucide-react": "0.474.0",
    "@google/genai": "1.34.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "prettier": "^3.3.0",
    "turbo": "^2.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitepress": "^1.5.0"
  }
}
